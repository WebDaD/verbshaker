#%RAML 0.8
title: VerbShaker API
baseUri: /
mediaType: application/json
protocols:
  - HTTP
version: 2.0
schemas:
  - Status: !include models/status.json
  - Proverb: !include models/proverb.json
  - Proverbs: !include models/proverbs.json
  - Languages: !include models/languages.json
/status:
  displayName: Status
  description: Delivers Status-Information for verbshaker
  get:
    responses:
      200:
        body:
          application/json:
            schema: Status
            example: |
              {
              "status":"running"
              }
/api:
  displayName: Main API Endpoint
  description: Here we go
  /languages:
    displayName: Languages
    description: return Array of avaiable Languages
    get:
      responses:
        200:
          body:
            application/json:
              schema: Languages
              example: |
                [ "de", "en"]
  /random:
    displayName: Return a random Proverb from any language
    get:
      responses:
        200:
          body:
            application/json:
              example: |
                {
                  front:"Morgenstund",
                  back:"fängt den Wurm",
                  combined:"Morgenstund fängt den Wurm",
                  language:"de"
                }
              schema: Proverb
  /{language}:
    displayName: Return all Proverbs for language
    uriParameters:
      language:
        example: de
        displayName: Language Code
        type: string
    get:
      responses:
        200:
          body:
            application/json:
              schema: Proverbs
              example: |
                [
                  ["Der frühe Vogel", "fängt den Wurm"],
                  ["Morgenstund", "hat Gold im Mund"]
                ]
    /random:
      displayName: Return a random proverb for the language
      get:
        responses:
          200:
            body:
              application/json:
                schema: Proverb
                example: |
                  {
                    front:"Morgenstund",
                    back:"fängt den Wurm",
                    combined:"Morgenstund fängt den Wurm",
                    language:"de"
                  }
