doctype html
html(lang='de', ng-app='verbshaker' ng-controller="verbshakerController" ng-controllerAs="ctrl")
  head
    meta(name='author', content='Dominik Sigmund')
    meta(name='publisher', content='Dominik Sigmund')
    meta(name='copyright', content='Dominik Sigmund')
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='page-topic', content='')
    meta(name='page-type', content='')
    meta(name='audience', content='Alle')
    meta(http-equiv='content-language', content='de')
    meta(name='robots', content='index, follow')
    meta(name='DC.Creator', content='Dominik Sigmund')
    meta(name='DC.Publisher', content='Dominik Sigmund')
    meta(name='DC.Rights', content='Dominik Sigmund')
    meta(name='DC.Description', content='')
    meta(name='DC.Language', content='de')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/font-awesome.min.css')
    link(rel='stylesheet', href='css/flag-icon.min.css')
    link(rel='stylesheet', href='css/main.css')
    link(rel="apple-touch-icon", sizes="180x180", href="images/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="images/manifest.json")
    link(rel="mask-icon", href="images/safari-pinned-tab.svg", color="#4caf50")
    meta(name="apple-mobile-web-app-title", content="Verbshaker")
    meta(name="application-name", content="Verbshaker")
    meta(name="msapplication-config", content="images/browserconfig.xml")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    title VerbShaker
  body.no-skin
    nav.navbar.navbar-default
      .fluid-container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img(src="images/android-chrome-192x192.png")
            span Verbshaker
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav.navbar-right
            li(ng-class="{ active: ctrl.language === 'de'}")
              a(href='#' ng-click="ctrl.changeLanguage('de')" title="de")
                span.flag-icon.flag-icon-de
            li(ng-class="{ active: ctrl.language === 'en'}")
              a(href='#' ng-click="ctrl.changeLanguage('en')" title="en")
                span.flag-icon.flag-icon-en
            li(ng-class="{ active: ctrl.language === 'fr'}")
              a(href='#' ng-click="ctrl.changeLanguage('fr')" title="fr")
                span.flag-icon.flag-icon-fr
            li(ng-class="{ active: ctrl.language === 'es'}")
              a(href='#' ng-click="ctrl.changeLanguage('es')" title="es")
                span.flag-icon.flag-icon-es
        // /.nav-collapse
    #content.fluid-container
      span#proverb(ng-click="ctrl.newProverb()") {{ctrl.proverb}}


    script(src='js/bootstrap-select.js')
    // angular specific scripts
    script(src='js/angular.min.js')
    script(src='js/angular-cookies.min.js')
    // myVerses specific scripts
    script(src='js/verbshaker.js')
