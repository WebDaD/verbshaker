doctype html
html(lang='de', ng-app='verbshaker'  ng-controller="verbshakerController")
  head
    meta(name='author', content='Dominik Sigmund')
    meta(name='publisher', content='Dominik Sigmund')
    meta(name='copyright', content='Dominik Sigmund')
    meta(name='description', content='')
    meta(name='keywords', content='')
    meta(name='page-topic', content='')
    meta(name='page-type', content='')
    meta(name='audience', content='Alle')
    meta(http-equiv='content-language', content='de')
    meta(name='robots', content='index, follow')
    meta(name='DC.Creator', content='Dominik Sigmund')
    meta(name='DC.Publisher', content='Dominik Sigmund')
    meta(name='DC.Rights', content='Dominik Sigmund')
    meta(name='DC.Description', content='')
    meta(name='DC.Language', content='de')
    link(rel='stylesheet', href='css/bootstrap.min.css')
    link(rel='stylesheet', href='css/font-awesome.min.css')
    link(rel='stylesheet', href='css/main.css')
    link(rel="apple-touch-icon", sizes="180x180", href="images/apple-touch-icon.png")
    link(rel="icon", type="image/png", href="images/favicon-32x32.png", sizes="32x32")
    link(rel="icon", type="image/png", href="images/favicon-16x16.png", sizes="16x16")
    link(rel="manifest", href="images/manifest.json")
    link(rel="mask-icon", href="images/safari-pinned-tab.svg", color="#4caf50")
    meta(name="apple-mobile-web-app-title", content="Verbshaker")
    meta(name="application-name", content="Verbshaker")
    meta(name="msapplication-config", content="images/browserconfig.xml")
    meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
    title VerbShaker
  body.no-skin
    nav.navbar.navbar-default
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
            img(src="images/android-chrome-72x72.png")
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-show="username !== ''" ng-class="{ active: isActive('/myVerses')}")
              a(href='#/myVerses') Meine Verse
            li(ng-class="{ active: isActive('/bible')}")
              a(href='#/bible') Bibel
            li(ng-class="{ active: isActive('/stats')}")
              a(href='#/stats') Statistiken
            li(ng-show="username !== ''" ng-class="{ active: isActive('/profile')}")
              a(href='#/profile') Profil
          button.navbar-right.btn.btn-default.navbar-btn(type="button" ng-click="logout()" ng-show="username !== ''" style="margin-left:10px;") Logout
          p.navbar-text.navbar-right(ng-show="username !== ''") Eingeloggt als {{username}}
        // /.nav-collapse
    .container
      


    script(src='js/bootstrap-select.js')
    // angular specific scripts
    script(src='js/angular.min.js')
    script(src='js/angular-cookies.min.js')
    // myVerses specific scripts
    script(src='js/verbshaker.js')
